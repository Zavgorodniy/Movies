<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.zavgorodniy.movies.Fragments.RequestList"
        android:id="@+id/request_list_fragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/request_list"
        android:layout_weight="1.3"
        android:layout_margin="5dp" />

    <fragment
        android:name="com.zavgorodniy.movies.Fragments.ItemList"
        android:id="@+id/item_list_fragment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:layout="@layout/item_list"
        android:layout_weight="1"
        android:layout_margin="5dp" />

</LinearLayout>